{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@automated-minecraft-bot/api/auth": ["libs/api/auth/src/index.ts"],
      "@automated-minecraft-bot/api/guards": ["libs/api/guards/src/index.ts"],
      "@automated-minecraft-bot/api/localguard": [
        "libs/api/localguard/src/index.ts"
      ],
      "@automated-minecraft-bot/api/minecraft": [
        "libs/api/minecraft/src/index.ts"
      ],
      "@automated-minecraft-bot/app/api": ["libs/app/api/src/index.ts"],
      "@automated-minecraft-bot/app/home": ["libs/app/home/src/index.ts"],
      "@automated-minecraft-bot/interfaces": ["libs/interfaces/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
